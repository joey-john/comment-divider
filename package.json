{
  "name": "comment-divider-j",
  "version": "0.5.0",
  "publisher": "joeycjohn",
  "engines": {
    "vscode": "^1.91.0"
  },
  "license": "GPL-3.0",
  "displayName": "Comment Divider",
  "description": "Divide your code by sections with styled separators. Forked from Comment-Divider by stackbreak",
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "comment",
    "separator",
    "divider",
    "section"
  ],
  "icon": "img/logo_256.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/joey-john/comment-divider"
  },
  "bugs": {
    "url": "https://github.com/joey-john/comment-divider/issues"
  },
  "homepage": "https://github.com/joey-john/comment-divider/blob/master/README.md",
  "contributes": {
    "commands": [
      {
        "command": "comment-divider.makeSubHeader",
        "title": "Comment Divider: Make Subheader"
      },
      {
        "command": "comment-divider.makeMainHeader",
        "title": "Comment Divider: Make Main Header"
      },
      {
        "command": "comment-divider.insertSolidLine",
        "title": "Comment Divider: Insert Solid Line"
      }
    ],
    "keybindings": [
      {
        "command": "comment-divider.makeSubHeader",
        "key": "alt+x",
        "when": "editorTextFocus"
      },
      {
        "command": "comment-divider.makeMainHeader",
        "key": "ctrl+shift+alt+x",
        "when": "editorTextFocus"
      },
      {
        "command": "comment-divider.insertSolidLine",
        "key": "shift+alt+x",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Comment Divider",
      "properties": {
        "comment-divider.length": {
          "type": "number",
          "default": 80,
          "description": "Set line length for all dividers."
        },
        "comment-divider.shouldLengthIncludeIndent": {
          "type": "boolean",
          "default": false,
          "description": "Set whether the divider will be shrink consider indent size, or will be always fixed length."
        },
        "comment-divider.mainHeaderFiller": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1,
          "default": "-",
          "description": "Set symbol for main header line filling (only one)."
        },
        "comment-divider.mainHeaderHeight": {
          "type": "string",
          "enum": [
            "block",
            "line"
          ],
          "default": "block",
          "description": "Set main header vertical style."
        },
        "comment-divider.mainHeaderAlign": {
          "type": "string",
          "enum": [
            "center",
            "left",
            "right"
          ],
          "default": "center",
          "description": "Set main header text align."
        },
        "comment-divider.mainHeaderTransform": {
          "type": "string",
          "enum": [
            "uppercase",
            "lowercase",
            "titlecase",
            "none"
          ],
          "default": "none",
          "description": "Set main header text transform style."
        },
        "comment-divider.subheaderFiller": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1,
          "default": "-",
          "description": "Set symbol for subheader line filling (only one)."
        },
        "comment-divider.subheaderHeight": {
          "type": "string",
          "enum": [
            "block",
            "line"
          ],
          "default": "line",
          "description": "Set subheader vertical style."
        },
        "comment-divider.subheaderAlign": {
          "type": "string",
          "enum": [
            "center",
            "left",
            "right"
          ],
          "default": "center",
          "description": "Set subheader text align."
        },
        "comment-divider.subheaderTransform": {
          "type": "string",
          "enum": [
            "uppercase",
            "lowercase",
            "titlecase",
            "none"
          ],
          "default": "none",
          "description": "Set subheader text transform style."
        },
        "comment-divider.lineFiller": {
          "type": "string",
          "minLength": 1,
          "maxLength": 1,
          "default": "-",
          "description": "Set symbol for solid line filling."
        },
        "comment-divider.languagesMap": {
          "type": "object",
          "description": "Defines what characters will be used as comment line limiters for special languages. It also overrides the default preset.",
          "uniqueItems": true,
          "patternProperties": {
            "^[\\w\\-\\.]+$": {
              "type": "object",
              "description": "Name of the language mode given by VSCode",
              "uniqueItems": true,
              "propertyNames": true,
              "required": [
                "limiters"
              ],
              "properties": {
                "solidLineSym": {
                  "type": "string",
                  "description": "Set filler symbol for solid line.",
                  "minLength": 1,
                  "maxLength": 1
                },
                "wordLineSym": {
                  "type": "string",
                  "description": "Set filler symbol for word line.",
                  "minLength": 1,
                  "maxLength": 1
                },
                "blockSym": {
                  "type": "string",
                  "description": "Set filler symbol for block lines",
                  "minLength": 1,
                  "maxLength": 1
                },
                "limiters": {
                  "type": "array",
                  "description": "Line Limiters",
                  "minItems": 1,
                  "maxItems": 2
                }
              },
              "additionalProperties": false
            }
          }
        }
      }
    }
  },
  "main": "./out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "prettier": "^2.2.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^4.1.2",
    "typescript-tslint-plugin": "^0.3.1"
  }
}